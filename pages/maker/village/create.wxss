/* pages/maker/village/create.wxss */
page{
  background: #fff;
}
.banner swiper{
  height: 460rpx;
}
.banner swiper swiper-item image{
  width: 100%;
  height: 460rpx;
}
.content{
  padding: 0 24rpx;
  position: relative;
  background: #fffeff;
}
.minute{
  position: absolute;
  top: -40rpx;
  left: 0rpx;
  z-index: 20;
  width: calc(100% - 60rpx);
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  background-color: #fffeff;
  border-top: 1rpx solid #f9f8ff;
  padding: 30rpx;
}
.history-list{
  padding-bottom: 30rpx;
}
.history-list .name{
  font-size: 32rpx;
  margin-bottom: 10rpx;
}
.history-list .dec{
  font-size: 22rpx;
  color: #ccc;
}
.history-list .dec text{
  margin-right: 16rpx;
}
.village-adress{
    font-size: 22rpx;
    color: #cccccc;
}
.changenum{
    padding: 50rpx 0;
    height: 164rpx;
    border-radius: 20rpx; 
    background-color: #f0f0f0;
}
.addandreduce{
    width: 500rpx;
    height: 110rpx;
    line-height: 110rpx;
    margin: 0 auto;
    display: block;
    border-radius: 54rpx;
    overflow: hidden;
    background-color: #fff;
}
.symbol{
    color:#927ff8;
    font-size:92rpx;
    width: 108rpx;
    display: inline-block;
    text-align: center;
    vertical-align: top;
}
.border-l{
    border-right: 1rpx solid #f0f0f0;
}
.border-r{
    border-left: 1rpx solid #f0f0f0;
}
.input-num{
    width: 280rpx;
    height: 110rpx;
    line-height: 110rpx;
    text-align: center;
    font-size: 58rpx;
    color:#4c4c4c;
}
.btn-submit{
    color:#fff;
    font-size: 28rpx;
    height: 88rpx;
    line-height: 88rpx;
    border-radius: 44rpx;
    margin-top: 32rpx;
    text-shadow: 0 0 4rpx #fff;
    box-shadow: 0 0 3rpx #e9e5fe;
    border: 1rpx solid #fff;
    background: -webkit-linear-gradient(#a897ff, #8a76f7); /* Safari 5.1 - 6.0 */
    background: -o-linear-gradient(#a897ff, #8a76f7); /* Opera 11.1 - 12.0 */
    background: -moz-linear-gradient(#a897ff, #8a76f7); /* Firefox 3.6 - 15 */
    background: linear-gradient(#a897ff, #8a76f7); /* 标准的语法 */
}