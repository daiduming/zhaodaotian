/* pages/maker/coupon_sy/index.wxss */
page{
  background: #fff;
}
.head{
  padding: 20rpx 24rpx;
}
.head-cell{
  position: relative;
}
.head-cell-info{
  color: #fff;
  font-size: 108rpx;
  font-weight: bold;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.content{
  padding: 0 24rpx;
  position: relative;
  background: #fffeff;
}
.minute{
  width: 100%;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
  background-color: #fffeff;
  border-top: 1rpx solid #f9f8ff;
  padding:0 0 30rpx 0;
}
.card-desc{
  word-break: break-all;
  word-wrap: break-word;
  white-space:pre-wrap; 
  font-size: 24rpx;
  color:#999999;
  width:430rpx;
  margin: 0 auto;
  line-height: 40rpx;
  text-align: center;
}
.history-list{
  padding-top: 40rpx;
  padding-bottom: 30rpx;
}
.village-adress{
    font-size: 22rpx;
    color: #cccccc;
}
.changenum{
    padding: 32rpx 0;
    border-radius: 20rpx; 
    background-color: #f0f0f0;
}
.bankname{
  display: inline-block;
  padding-left: 32rpx;
  padding-right:12rpx;
  height: 88rpx;
  vertical-align: top;
  font-size: 28rpx;
  line-height:88rpx;
}
.banknum{
  position: relative;
  width:638rpx;
  height:88rpx;
  background-color:#fff;
  margin: 0 auto;
  margin-bottom: 32rpx;
}
.banknum::after{
  content: " ";
  display: inline-block;
  transform: rotate(45deg);
  height: 18rpx;
  width: 18rpx;
  border-width: 1px 1px 0 0;
  border-color: #C8C8CD;
  border-style: solid;
  position: absolute;
  top: 17px;
  right: 37rpx;
}
.bank-input{
  height:88rpx;
  line-height: 88rpx;
}
.addandreduce{
    width: 380rpx;
    height: 82rpx;
    line-height: 82rpx;
    margin: 0 auto;
    margin-top: 32rpx;
    display: block;
    border-radius: 54rpx;
    overflow: hidden;
    background-color: #fff;
}
.symbol{
    color:#927ff8;
    font-size:63rpx;
    width: 80rpx;
    display: inline-block;
    text-align: center;
    vertical-align: top;
}
.border-l{
    border-right: 1rpx solid #f0f0f0;
}
.border-r{
    border-left: 1rpx solid #f0f0f0;
}
.input-num{
    width: 218rpx;
    height: 82rpx;
    line-height: 82rpx;
    text-align: center;
    font-size: 40rpx;
    color:#4c4c4c;
}
.btn-submit{
    color:#fff;
    font-size: 28rpx;
    height: 88rpx;
    line-height: 88rpx;
    border-radius: 44rpx;
    margin-top: 32rpx;
    text-shadow: 0 0 4rpx #fff;
    box-shadow: 0 0 3rpx #e9e5fe;
    border: 1rpx solid #fff;
    background: -webkit-linear-gradient(#a897ff, #8a76f7); /* Safari 5.1 - 6.0 */
    background: -o-linear-gradient(#a897ff, #8a76f7); /* Opera 11.1 - 12.0 */
    background: -moz-linear-gradient(#a897ff, #8a76f7); /* Firefox 3.6 - 15 */
    background: linear-gradient(#a897ff, #8a76f7); /* 标准的语法 */
}
.disabled{
  background: #ccc;
  text-shadow: initial;
  box-shadow: initial;
  border: 0;
}