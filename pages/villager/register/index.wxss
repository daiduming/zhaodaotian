/* pages/villager/index.wxss */

.content{
  padding: 0 24rpx;
  position: relative;
}
.info-block{
  background: #fff;
  border-radius: 20rpx;
  -moz-box-shadow: 0 0 10rpx #fff6f6;
  box-shadow: 0 0 10rpx #fff6f6;
  position: absolute;
  top: -180rpx;
  left: 24rpx;
  right: 24rpx;
  padding-bottom: 40rpx;
}
.info-block .thumb{
  width: 180rpx;
  margin: -100rpx auto 40rpx;
}
.fui-cell-group .fui-cell .fui-cell-icon{
  margin-right: 20rpx;
}
.fui-cell-group .fui-cell .fui-cell-icon .icon{
  width: 32rpx;
}
.btn-release{
  height: 90rpx;
  background: -webkit-linear-gradient(#ff917b, #fb5d70); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(#ff917b, #fb5d70); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(#ff917b, #fb5d70); /* Firefox 3.6 - 15 */
  background: linear-gradient(#ff917b, #fb5d70); /* 标准的语法 */
  border: none;
  border-radius: 100rpx;
  color: #fff;
  font-size: 28rpx;
  line-height: 90rpx;
  -moz-box-shadow: 0 0 5rpx #f3f3f3;
  box-shadow: 0 0 5rpx #f3f3f3;
  width: 100%;
}
.placeholder-color{
  color:#ccc!important;
  font-size: 28rpx!important;
}