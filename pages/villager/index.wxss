/* pages/villager/index.wxss */
.model {
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.5);
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 9999;
}

.model .inner {
    width: 624rpx;
    height: 600rpx;
    border-radius: 25rpx;
    margin: 260rpx auto;
    overflow: hidden;
    background-repeat: no-repeat;
    background-size: 100% 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}
.model .inner .inner-cont{
  text-align: center;
}
.model .inner .bell{
  width: 160rpx;
  margin-bottom: 40rpx;
}

.model .inner .hint-text{
  font-size: 36rpx;
  color: #fff;
  font-weight: bold;
}

.model .inner .hint-text text{
  display: block;
}

.model .inner .btn-sgs{
  background: #fff;
  color: #f23a46;
  -moz-box-shadow: 0 0 10rpx #f23a46;
  box-shadow: 0 0 10rpx #f23a46;
  border-radius: 50rpx;
  padding: 20rpx 110rpx;
  font-size: 26rpx;
  font-weight: bold;
  margin-top: 60rpx;
}

.content{
  padding: 0 24rpx;
  position: relative;
}
.info-block{
  background: #fff;
  border-radius: 20rpx;
  -moz-box-shadow: 0 0 10rpx #fff6f6;
  box-shadow: 0 0 10rpx #fff6f6;
  position: absolute;
  top: -180rpx;
  left: 24rpx;
  right: 24rpx;
  text-align: center;
  padding-bottom: 40rpx;
}
.info-block .thumb{
  width: 180rpx;
  margin: -100rpx auto 40rpx;
}
.info-block .name{
  font-size: 36rpx;
  color: #000;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}
.info-block .name image{
  width: 32rpx;
}
.address{
  color: #b2b2b2;
  font-size: 26rpx;
  margin-bottom: 40rpx;
}
.info-block .tab{
  display: flex;
}
.info-block .tab .tab-cell{
  flex: 1;
  text-align: center;
}
.info-block .tab .tab-cell .text{
  font-size: 44rpx;
  color: #000;
}
.info-block .tab .tab-cell .tit{
  font-size: 24rpx;
  color: #b2b2b2;
}