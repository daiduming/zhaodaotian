page {
    background: #fff;
}

.fui-tab-scroll:after{
  display: none;
}

.goods-info {
    width: auto;
}

.order .contain {
    margin-top: 90rpx;
    padding: 5rpx 24rpx;
}

.fui-list-group{
  box-shadow: 0 0 20rpx #f2f2f2;
  border: 1rpx solid #f2f2f2;
  border-radius: 20rpx;
  margin-top: 40rpx;
}

.fui-list{
  padding: 32rpx;
}

.fui-list:before {
  display: none;
}

.fui-list-media image{
  width: 170rpx;
  height: 170rpx;
}

