/* pages/travels/list.wxss */
page{
  background: #fff;
}

.list-group{
  background: #fff;
  border-radius: 10rpx;
  box-shadow: 0 0 15rpx #f0f0f0;
  margin: 30rpx 24rpx 0;
}
.list-item{
  padding: 20rpx 30rpx;
}
.list-item .name{
  display: flex;
  margin-bottom: 10rpx;
}
.list-item .name .avatar{
  width: 80rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}
.list-item .name .inner view{
  font-size: 30rpx;
  margin-bottom: 10rpx;
}
.list-item .name .inner text{
  font-size: 22rpx;
  color: #ccc;
}
.list-item .title{
  font-size: 28rpx;
  text-overflow: ellipsis;
  white-space:nowrap;
  overflow:hidden;
  padding: 10rpx 0 5rpx;
}
.list-item .address{
  font-size: 24rpx;
  color: #ccc;
  padding: 5rpx 0 10rpx;
}
.list-item .thumb{
  border-radius: 20rpx;
  margin: 10rpx 0;
}
.list-item .thumb image{
  width: 100%;
}
.list-item .dec{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
}
.list-item .dec .dec-cell{
  font-size: 24rpx;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
}
.list-item .dec .dec-cell image{
  margin-right: 5rpx;
}

.empty {
    padding:100rpx 150rpx 200rpx;
    font-size: 28rpx;
}

.commission-shouye {
    position: fixed;
    right: 20rpx;
    z-index: 999;
    font-size: 22rpx;
    color: #fff;
    width: 84rpx;
    height: 84rpx;
    transition: all .7s;
    background: rgba(0,0,0,0.5);
    bottom: 280rpx;
}

.commission-shouye {
    width: 90rpx;
    height: 90rpx;
    background: #ff5555;
    position: fixed;
    right: 20rpx;
    bottom: 80rpx!important;
    border-radius: 50%;
    text-align: center;
    padding: 0;
    line-height: 90rpx;
}

.commission-shouye {
    bottom: 235rpx;
}

.commission-shouye .icox {
    font-size: 50rpx;
    color: #fff;
}