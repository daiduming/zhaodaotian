/* pages/travels/details.wxss */
page{
  background: #fff;
}
.dianzan{
  position: fixed;
  width: 92rpx;
  height: 92rpx;
  border-radius: 50%;
  background: -webkit-linear-gradient(#6cbbff, #248ce5); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(#6cbbff, #248ce5); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(#6cbbff, #248ce5); /* Firefox 3.6 - 15 */
  background: linear-gradient(#6cbbff, #248ce5); /* 标准的语法 */
  top: 50%;
  right: 24rpx;
  transform: translate(0, -50%);
  z-index: 999;
  display: flex;
  align-items: center;  
  justify-content: center;
}
.dianzan image{
  width: 42rpx;
}
.banner{
}
.banner swiper{
  height: 430rpx;
}
.banner swiper swiper-item image{
  width: 100%;
  height: 430rpx;
}
.content{
  position: relative;
  padding: 0 24rpx;
  background: #fff;
  margin-top: -50rpx;
  border-top-left-radius: 25rpx;
  border-top-right-radius: 25rpx;
  z-index: 999;
}
.content .title{
  font-size: 36rpx;
   line-height: 60rpx;
   padding: 20rpx 0 0;
}
.content .name{
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333; 
  padding: 10rpx 0;
}
.content .name image{
  width: 60rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}
.content .address, .content .date{
  font-size: 22rpx;
  color: #b2b2b2;
  margin: 20rpx 0;
}
.content .details{
  position: relative;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.content .details:after {
    content: "";
    height: 2rpx;
    width: 100%;
    background: #efefef;
    position: absolute;
    left: 0;
    top: 0;
    z-index: 2;
}
.wxParse-p{
  font-size: 28rpx;
  line-height: 50rpx;
  margin-bottom: 10rpx;
  overflow: hidden;
}
.content .comment{
  position: relative;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.content .comment:after {
    content: "";
    height: 2rpx;
    width: 100%;
    background: #efefef;
    position: absolute;
    left: 0;
    top: 0;
    z-index: 2;
}
.comment .subtitle{
  font-size: 32rpx;
  margin-bottom: 20rpx;
}
.comment .subtitle text{
  font-size: 26rpx;
  color: #b2b2b2;
}
.comment-cell{
  display: flex;
  margin-bottom: 20rpx;
}
.comment-cell .avatar{
  margin-right: 10rpx;
}
.comment-cell .avatar image{
  width: 60rpx;
  border-radius: 50%;
}
.comment-cell .inner{
  flex: 1;
  border-bottom: 2rpx solid #efefef;
}
.comment-cell .inner .inner-head{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.comment-cell .inner .inner-head-left view{
  font-size: 26rpx;
}
.comment-cell .inner .inner-head-left text{
  font-size: 22rpx;
  color: #b2b2b2;
}
.comment-cell .inner .inner-head-right{
  font-size: 24rpx;
  float: right;
}
.comment-cell .inner .inner-head-right image{
  width: 24rpx;
  margin-right: 5rpx;
}
.comment-cell .inner .inner-cont{
  font-size: 26rpx;
  line-height: 40rpx;
  padding: 20rpx 0;
}
.more{
  padding: 10rpx 0;
  text-align: center;
  font-size: 28rpx;
  color: #b2b2b2;
}
.more text{
  position: relative;
}
.more text::before{
  content: '';
  position: absolute;
  border-left: 1rpx solid #b2b2b2;
  border-bottom: 1rpx solid #b2b2b2;
  height: 10rpx;
  width: 10rpx;
  top: 50%;
  left: 0;
  transform: translate(50%, -50%) rotate(-45deg);
}
.comment-input{
  position: relative;
  padding: 15rpx 24rpx;
  display: flex;
  align-items: center;
}
.comment-input:after {
    content: "";
    height: 2rpx;
    width: 100%;
    background: #efefef;
    position: absolute;
    left: 0;
    top: 0;
    z-index: 2;
}
.comment-input .image{
  margin-right: 34rpx;
}
.comment-input .image image{
  width: 50rpx;
}
.comment-input .input{
  flex: 1;
  display: flex;
}
.comment-input .input input{
  text-align: center;
  font-size: 26rpx;
  border: 1rpx solid #efefef;
  border-radius: 5rpx;
  height: 70rpx;
  box-sizing: border-box;
  line-height: 70rpx;
  flex: 1;
  padding: 0 20rpx;
}
.comment-input .input text{
  background: -webkit-linear-gradient(#ff917b, #fb5e70); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(#ff917b, #fb5e70); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(#ff917b, #fb5e70); /* Firefox 3.6 - 15 */
  background: linear-gradient(#ff917b, #fb5e70); /* 标准的语法 */
  color: #fff;
  font-size: 24rpx;
  height: 70rpx;
  line-height: 70rpx;
  padding: 0 40rpx;
}