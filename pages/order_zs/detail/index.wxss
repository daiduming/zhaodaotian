/* pages/order_zs/detail/index.wxss */
page{
  background: #fff;
}
.head-status{
  margin: 28rpx auto;
  font-size: 28rpx;
  padding: 35rpx;
  margin-left: 50%;
  transform: translate(-50%, 0);
  box-shadow: 0 0 10rpx #f7f7f7;
  border: 1rpx solid #f7f7f7;
  border-radius: 5rpx;
  display: flex;
  align-items: center;
}
.head-status image{
  width: 60rpx;
  margin-right: 24rpx;
  
}
.content{
  padding: 0 24rpx 40rpx;
}
.subtitle{
  font-size: 28rpx;
  line-height: 90rpx;
}
.dum-list-group{
  box-shadow: 0 0 10rpx #f7f7f7;
  border: 1rpx solid #f7f7f7;
  border-radius: 5rpx;
}
.dum-list{
  display: flex;
  padding: 20rpx 30rpx;
  align-items: center;
}
.dum-list-media .icon{
  width: 40rpx;
  margin-right: 20rpx;
}
.dum-list-inner{
  position: relative;
}
.dum-list-inner .name{
  font-size: 26rpx;
  margin-bottom: 10rpx;
}
.dum-list-inner .name text{
  margin-right: 20rpx;
}
.dum-list-inner .dec{
  font-size: 22rpx;
  color: #b2b2b2;
}
.dum-date-group{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 40rpx;
}
.dum-date{
  box-shadow: 0 0 10rpx #f7f7f7;
  border: 1rpx solid #f7f7f7;
  border-radius: 10rpx;
  padding: 20rpx 30rpx;
}
.dum-date-inner{
  font-size: 28rpx;
}
.dum-date-inner text{
  font-size: 22rpx;
  color: #b2b2b2;
  margin-left: 15rpx;
}
.dum-date-subtitle{
  font-size: 22rpx;
  color: #b2b2b2;
}
.dum-date-num{
  line-height: 46rpx;
  border: #ccc solid 1rpx;
  border-radius: 50rpx;
  padding: 0 20rpx;
  font-size: 26rpx;
}
.goods_img{
  width: 170rpx;
  height: 140rpx;
  border-radius: 10rpx;
  margin-right: 30rpx;
}
.dum-list.between{
  justify-content: space-between;
  position: relative;
  padding: 30rpx 30rpx;
}
.dum-list.between::after{
  content: '';
  position: absolute;
  left: 24rpx;
  right: 24rpx;
  height: 1rpx;
  bottom: 0;
  border-bottom: 1rpx solid #ebebeb;
}
.dum-list.between:last-child::after{
  display: none;
}
.dum-list-inner .text-title{
  font-size: 28rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.dum-list-inner .text-dec{
  font-size: 22rpx;
  color: #999;
}
.dum-list-inner .text-num{
  position: absolute;
  left: 0;
  width: 100%;
  bottom: 0;
  font-size: 28rpx;
  line-height: 40rpx;
}
.dum-list-inner .text-num text{
  font-size: 22rpx;
  color: #999;
  float: right;
}
.text-right{
  text-align: right;
}
.dum-list .dum-list-lable{
  color: #999;
  font-size: 26rpx;
}
.dum-list .dum-list-value{
  color: #666;
  font-size: 26rpx;
}
.fui-footer {
  text-align: right;
}
.btn {
  height: 56rpx;
  line-height: 52rpx;
  border-radius: 40rpx;
  padding: 0 26rpx;
  margin-top: 24rpx;
  font-size: 26rpx;
}
.btn.btn-sm {
  margin-top: 24rpx;
  margin-right: 24rpx;
}

