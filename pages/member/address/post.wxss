@import "../../common/city-picker.wxss";
.fui-cell-group{
  margin: 20rpx 30rpx 0;
  -moz-box-shadow: 0 0 10rpx #f3f3f3;
  box-shadow: 0 0 10rpx #f3f3f3;
  border-radius: 20rpx;
}
.fui-cell-group .fui-cell {
  display: inherit;
}
.fui-cell-group .fui-cell-label{
  color: #999;
  font-size: 26rpx;
  margin-bottom: 24rpx;
}
.fui-cell-group .fui-cell input, .fui-cell-group .fui-cell textarea{
  font-size: 32rpx;
}
.fui-cell-group .fui-cell textarea{
  min-height: 300rpx;
}
.fui-cell-group .fui-cell .fui-cell-info {
  font-size: 32rpx;
  position: relative;
}
.fui-cell-group .fui-cell .fui-cell-info.remark:after {
    content: " ";
    display: inline-block;
    transform: rotate(45deg);
    height: 16rpx;
    width: 16rpx;
    border-width: 1px 1px 0 0;
    border-color: #999;
    border-style: solid;
    position: absolute;
    margin-left: .3em;
    top: 14rpx;
    right: 8rpx;
}
.btn-danger{
  height: 90rpx;
  background: -webkit-linear-gradient(#2268d1, #5d9cfb)!important; /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(#2268d1, #5d9cfb)!important; /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(#2268d1, #5d9cfb)!important; /* Firefox 3.6 - 15 */
  background: linear-gradient(#2268d1, #5d9cfb)!important; /* 标准的语法 */
  border: none!important;
  border-radius: 100rpx;
  color: #fff;
  font-size: 28rpx;
  line-height: 90rpx;
  -moz-box-shadow: 0 0 5rpx #f3f3f3;
  box-shadow: 0 0 5rpx #f3f3f3;
  letter-spacing: 16rpx;
}
.wx-switch-input{
    overflow: hidden;
    width:96rpx !important;
    height:48rpx !important;
    background: linear-gradient(#1660cf, #5692ed)!important;
    border: none !important;
    border-radius: 100rpx;
}
/*白色样式（false的样式）*/
.wx-switch-input::before{
    width:96rpx !important;
    height: 48rpx !important;
}
/*绿色样式（true的样式）*/
.wx-switch-input::after{
    width: 96rpx !important;
    height: 48rpx !important;
}