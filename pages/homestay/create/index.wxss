page{
  background: #fff;
}
.banner{
}
.banner swiper{
  height: 430rpx;
}
.banner swiper swiper-item image{
  width: 100%;
  height: 430rpx;
}
.content{
  position: relative;
  padding: 0 24rpx;
  background: #fff;
  margin-top: -50rpx;
  border-top-left-radius: 25rpx;
  border-top-right-radius: 25rpx;
  z-index: 999;
  padding-bottom: 120rpx;
}
.content .title{
  font-size: 36rpx;
   line-height: 60rpx;
   padding: 20rpx 0 15rpx;
}
.content .time{
  font-size: 24rpx;
  color: #b2b2b2;
}
.content .time text{
  margin-right: 20rpx;
}
.content .price{
  color: #f23a46;
  font-size: 28rpx;
  line-height: 80rpx;
}
.content .price text{
  font-size: 32rpx;
}
.total-cell{
  background: #f5f5f5;
  padding: 20rpx 30rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.total-cell-subtitle{
  font-size: 28rpx;
}
.num-cell-group{
  width: 180rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 50rpx;
  overflow: hidden;
}
.num-cell-group .minus{
  display: inline-block;
  background: #fff;
  color: #ffc732;
  margin-right: 1rpx;
  border-top-left-radius: 50rpx;
  border-bottom-left-radius: 50rpx;
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
}
.num-cell-group .num-cell-input{
  background: #fff;
  font-size: 28rpx;
  width: 76rpx;
  text-align: center;
  height: 50rpx;
  line-height: 50rpx;
  box-sizing: border-box;
}
.num-cell-group .plus{
  display: inline-block;
  background: #fff;
  color: #ffc732;
  margin-left: 1rpx;
  border-top-right-radius: 50rpx;
  border-bottom-right-radius: 50rpx;
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
}
.content .details{
  position: relative;
  padding-top: 20rpx;
}
.content .details:after {
    display: none;
    content: "";
    height: 2rpx;
    width: 100%;
    background: #efefef;
    position: absolute;
    left: 0;
    top: 0;
    z-index: 2;
}
.subtitle{
  font-size: 30rpx;
  line-height: 80rpx;
}
.form-cell-group{
  background: #f5f5f5;
  padding: 20rpx 30rpx 10rpx;
  border-radius: 10rpx;
}
.form-cell{
  position: relative;
  margin-bottom: 20rpx;
}
.form-cell::before{
  content: "";
  height: 2rpx;
  width: 100%;
  background: #efefef;
  position: absolute;
  left: 0;
  bottom: 0;
  z-index: 2;
}
.form-cell-lable{
  font-size: 24rpx;
  color: #b2b2b2;
  line-height: 40rpx;
}
.form-cell-input input{
  font-size: 28rpx;
  padding: 5rpx 0;
}
.form-cell-input textarea{
  font-size: 28rpx;
  height: 180rpx;
  padding: 5rpx 0;
}
.coupon-cell{
  background: #f5f5f5;
  padding: 20rpx 30rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.coupon-cell-inner{
  flex: 1;
}
.coupon-cell-inner .name{
  font-size: 28rpx;
  margin-bottom: 5rpx;
}
.coupon-cell-inner .name text{
  font-size: 22rpx;
  color: #b2b2b2;
  margin-left: 15rpx;
}
.coupon-cell-inner .price{
  color: #f23a46;
  font-size: 22rpx;
  line-height: 30rpx;
}
.option{
  display: inline-block;
  height: 48rpx;
  width: 48rpx;
  border: 5rpx solid #ccc;
  border-radius: 50%;
  box-sizing: border-box;
}
.option.active{
  background: linear-gradient(#ffca33, #fe9627);
  border: none;
  position: relative;
}
.option.active::before{
  content: "";
  height: 20rpx;
  width: 10rpx;
  border-right: 2rpx solid #fff;
  border-bottom: 2rpx solid #fff;
  z-index: 2;
  transform: translate(-50%, -60%) rotate(45deg);
  position: absolute;
  top: 50%;
  left: 50%;
}
.footer{
  height: 100rpx;
  position: relative;
  display: flex;
  background: #fff;
}
.footer.fixed{
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 9999;
  width: 100%;
}
.footer:after {
    content: "";
    height: 2rpx;
    width: 100%;
    background: #efefef;
    position: absolute;
    left: 0;
    top: 0;
    z-index: 2;
}
.footer .price{
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding: 0 40rpx;
  font-size: 24rpx;
  color: #4c4c4c;
  box-sizing: border-box;
  width: 50%;
}
.footer .price text{
  color: #f23a46;
}
.footer .tijiao{
  width: 50%;
  background: linear-gradient(#ffca33, #fe9627);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
}
.footer .tijiao image{
  margin-right: 15rpx;
  width: 28rpx;
}